<%- include("partials/header.ejs") %>

<div class="bg-white rounded-xl shadow-sm p-6 max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Pull New Model</h2>
    <form method="post" class="space-y-6">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Model Name</label>
            <input 
                type="text" 
                name="modelname"
                class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="e.g. llama2" 
                required>
        </div>
        <button 
            type="submit" 
            class="w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            Pull Model
        </button>
    </form>
</div>

</body>
</html>
